{
  "name": "awana",
  "version": "1.0.0",
  "description": "Minimal Grails PWA with HTMX and Tailwind CSS",
  "scripts": {
    "build:css": "tailwindcss -i ./src/input.css -o ./grails-app/assets/stylesheets/tailwind.css --watch",
